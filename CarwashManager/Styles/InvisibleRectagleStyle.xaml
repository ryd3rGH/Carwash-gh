<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:CarwashManager.Styles">
    <Style x:Key="InvisibleRectangle" TargetType="{x:Type Rectangle}">
        <Setter Property="Stroke" Value="Transparent"/>
        <Setter Property="Fill" Value="Transparent"/>
        <Setter Property="RadiusX" Value="16"/>
        <Setter Property="RadiusY" Value="16"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Fill" Value="#BEE6FD"/>
                <Setter Property="Stroke" Value="#3C7FB1"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>