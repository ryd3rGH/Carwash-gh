<UserControl x:Class="CarwashManager.Controls.ClientCarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarwashManager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="660" Margin="0,3,1,0" HorizontalAlignment="Stretch">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="23*"/>
            <ColumnDefinition Width="42*"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="plateLbl" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="13" FontWeight="Bold" Grid.Column="0"/>
        <Label x:Name="brandLbl" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="13" Grid.Column="1"/>
        <Label x:Name="modelLbl" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="13" Grid.Column="2"/>
        <Button x:Name="removeBtn" Grid.Column="3" Margin="20,2,20,2" Content="DEL"/>
    </Grid>
</UserControl>
