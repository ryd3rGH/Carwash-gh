<UserControl x:Class="CarwashManager.Controls.BoxModControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarwashManager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="199" d:DesignWidth="220" Height="199" Margin="0,0,5,5" MouseDown="UserControl_MouseDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="129*"/>
            <RowDefinition Height="35*"/>
        </Grid.RowDefinitions>
        <Rectangle Grid.ColumnSpan="2" Grid.RowSpan="3" Style="{StaticResource Rectangle}"/>
        <Label x:Name="nameLbl" FontSize="14" FontWeight="Bold" Foreground="#FF4D4D4D" HorizontalAlignment="Center" Margin="0,1,0,-1"/>        
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Image x:Name="imageBox" Source="..\Resources\Images\Box\Box1.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,3,10,3"/>
        </Grid>
        <Label x:Name="statusLbl" FontSize="14" FontWeight="Bold" Foreground="#FF4D4D4D" Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
